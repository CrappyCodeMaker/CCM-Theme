{
	"name": "crappycode-theme",
	"displayName": "CCM Theme",
	"description": "CCM Theme for the VS Code",
	"version": "1.53.8",
	"author": "Danil Reznichenko [@danilrez]",
	"publisher": "CrappyCodeMaker",
	"license": "MIT",
	"icon": "./public/images/icon.png",
	"galleryBanner": {
		"color": "#232934",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/danilrez/CCM-Theme"
	},
	"bugs": {
		"url": "https://github.com/danilrez/CCM-Theme/issues"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"theme",
		"ccm",
		"crappycodemaker",
		"danilrez",
		"reznida",
		"dark",
		"night",
		"light",
		"daylight",
		"colorblind"
	],
	"contributes": {
		"themes": [
			{
				"label": "CCM Night",
				"uiTheme": "vs-dark",
				"path": "./public/themes/ccm-night-theme.json"
			},
			{
				"label": "CCM Daylight",
				"uiTheme": "vs",
				"path": "./public/themes/ccm-daylight-theme.json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^22.13.1",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.2.0",
		"@typescript-eslint/parser": "^8.2.0",
		"@vscode/vsce": "^3.2.2",
		"eslint": "^9.9.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "^5.5.4"
	},
	"scripts": {
		"prebuild": "rm -rf ./build",
		"build": "tsc",
		"prepublishOnly": "pnpm build && vsce publish",
		"package": "vsce package -o ./ccm-vscode-theme.vsix",
		"theme": "node ./src/index.js",
		"test:colors-set": "pnpm tsx ./src/tests/testThemeColors.ts",
		"test:colors-unset": "pnpm tsx ./src/tests/testUnsetThemeColors.ts",
		"test:colors-terminal": "for i in {0..15}; do printf \"\\e[48;5;${i}m  %3d  \\e[0m\" \"$i\"; (( (i+1) % 8 == 0 )) && echo \"\"; done",
		"ci:lint": "eslint --ext .tsx --ext .ts --quiet src/",
		"ci:lint-fix": "eslint --ext .tsx --ext .ts --fix --quiet src/",
		"ci:prettier": "prettier . --write"
	},
	"prettier": {
		"printWidth": 150,
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4,
		"importOrder": [
			"^[./]"
		],
		"importOrderCaseInsensitive": true,
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"endOfLine": "lf"
	},
	"packageManager": "pnpm@9.0.0"
}
