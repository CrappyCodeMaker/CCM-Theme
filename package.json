{
	"name": "crappycode-theme",
	"displayName": "CrappyCodeMaker Theme",
	"description": "CrappyCodeMaker themes for VS Code",
	"version": "2.1.0-beta.2",
	"author": "Danil Reznichenko [@danilrez]",
	"publisher": "CrappyCodeMaker",
	"license": "MIT",
	"icon": "public/images/icon.png",
	"galleryBanner": {
		"color": "#232934",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/danilrez/ccm-theme"
	},
	"bugs": {
		"url": "https://github.com/danilrez/ccm-theme/issues"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"theme",
		"ccm",
		"crappycodemaker",
		"danilrez",
		"reznida",
		"dark",
		"night",
		"light",
		"daylight"
	],
	"contributes": {
		"themes": [
			{
				"label": "Crappy Night",
				"uiTheme": "vs-dark",
				"path": "./public/themes/crappy-night-theme.json"
			},
			{
				"label": "✨NEW✨ Crappy Daylight",
				"uiTheme": "vs",
				"path": "./public/themes/crappy-daylight-theme.json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "22.x",
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.2.2",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "5.3.3",
		"vitest": "^3.0.6"
	},
	"scripts": {
		"prebuild": "rm -rf ./build",
		"build": "tsc",
		"prepackage": "pnpm generate-theme",
		"package": "vsce package",
		"generate-theme": "pnpm tsx ./src/main.ts",
		"test": "NODE_ENV=unittest vitest",
		"test:set": "pnpm tsx ./tests/manual/themeColors.test.ts",
		"test:unset": "pnpm tsx ./tests/manual/unsetThemeColors.test.ts",
		"test:terminal": "for i in {0..15}; do printf \"\\e[48;5;${i}m  %3d  \\e[0m\" \"$i\"; (( (i+1) % 8 == 0 )) && echo \"\"; done",
		"ci:prettier": "prettier . --write"
	},
	"prettier": {
		"printWidth": 150,
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4,
		"importOrder": [
			"^[./]"
		],
		"importOrderCaseInsensitive": true,
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"endOfLine": "lf"
	},
	"packageManager": "pnpm@9.0.0"
}
