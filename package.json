{
	"name": "crappycode-theme",
	"displayName": "CrappyCodeMaker Theme",
	"description": "CrappyCodeMaker themes for VS Code",
	"version": "2.1.0-beta.5",
	"author": "Danil Reznichenko [@danilrez]",
	"publisher": "CrappyCodeMaker",
	"license": "MIT",
	"icon": "build/icon.png",
	"galleryBanner": {
		"color": "#232934",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/danilrez/ccm-theme"
	},
	"bugs": {
		"url": "https://github.com/danilrez/ccm-theme/issues"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"theme",
		"ccm",
		"crappycodemaker",
		"danilrez",
		"reznida",
		"dark",
		"night",
		"light",
		"daylight"
	],
	"contributes": {
		"themes": [
			{
				"label": "Crappy Night",
				"uiTheme": "vs-dark",
				"path": "build/themes/crappy-night-theme.json"
			},
			{
				"label": "✨NEW✨ Crappy Daylight",
				"uiTheme": "vs",
				"path": "build/themes/crappy-daylight-theme.json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "22.x",
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.2.2",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "5.3.3",
		"vitest": "^3.0.6"
	},
	"scripts": {
		"prepackage": "rm -rf ./build && pnpm copy-resources && pnpm generate:themes",
		"package": "vsce package -o ./build/crappycode-theme-${npm_package_version}.vsix",
		"generate:themes": "pnpm tsx ./src/index.ts",
		"generate:dark": "pnpm generate:themes --dark",
		"generate:light": "pnpm generate:themes --light",
		"copy-resources": "mkdir -p build && cp images/icon.png build/icon.png",
		"test": "NODE_ENV=unittest vitest",
		"test:dark": "pnpm generate:themes --dark --test",
		"test:light": "pnpm generate:themes --light --test",
		"test:unset": "pnpm tsx ./src/index.ts --dark --test-unset",
		"test:terminal": "for i in {0..15}; do printf \"\\e[48;5;${i}m  %3d  \\e[0m\" \"$i\"; (( (i+1) % 8 == 0 )) && echo \"\"; done",
		"ci:prettier": "prettier . --write"
	},
	"prettier": {
		"printWidth": 150,
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4,
		"importOrder": [
			"^[./]"
		],
		"importOrderCaseInsensitive": true,
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"endOfLine": "lf"
	},
	"packageManager": "pnpm@9.0.0"
}
